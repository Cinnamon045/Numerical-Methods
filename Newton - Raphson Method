"""
function - string variable
derivative_of_f - string variable
x - float
n - integer
"""

def newton_raphson_method(function, derivative_of_f, x, n):

  def f(x):
    f = eval(function)
    return f
  
  def df(x):
    df = eval(derivative_of_f)
    return df
  
  for intercept in range(1,n):
    x = x - (f(x)/df(x))

  print(f"The root was found to be a {x} after {n} iterations")
